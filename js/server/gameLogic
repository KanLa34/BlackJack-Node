module.exports = {
countCards : function(cardArray){
        var cardTotal=0;
        var aceCount=0;
        if(cardArray.length>0) {
            for(var cardIndex=0;cardIndex=cardArray.length;cardIndex++){
                cardTotal=cardTotal+cardValue(cardArray[cardIndex]);
                if(cardValue(cardArray[cardIndex])===11){aceCount++;}
            }
            while(aceCount>0&&cardTotal>21){
                cardTotal-=10;
                aceCount--;
               }
        return cardTotal;
        }
        else return 0;
    },
    cardValue : function(cardString){
        cardString.slice(0, -1); //remove suit
        if(!isNaN(cardString)){return cardString;}
        else if(cardString==="A"){return 11;}
        else {return 10;}
    }
};
